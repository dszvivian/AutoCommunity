<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >


    <ImageView
        android:id="@+id/ivHomePost"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bike1" />

    <ImageButton
        android:id="@+id/ivHomeProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="TODO"
        android:padding="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/ivHomePost"
        app:layout_constraintTop_toBottomOf="@+id/ivHomePost"
        app:srcCompat="@drawable/profile1" />

    <TextView
        android:id="@+id/tvHomeUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="roshan_photography___"
        app:layout_constraintBottom_toBottomOf="@+id/ivHomeProfile"
        app:layout_constraintStart_toEndOf="@+id/ivHomeProfile"
        app:layout_constraintTop_toTopOf="@+id/ivHomeProfile" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/ivHomePost"
        app:layout_constraintTop_toBottomOf="@+id/ivHomePost"
        app:srcCompat="@drawable/heart"
        android:contentDescription="TODO" />


</androidx.constraintlayout.widget.ConstraintLayout>