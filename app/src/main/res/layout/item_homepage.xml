<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/ivHomePost"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bike1" />



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivHomeProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="TODO"
            android:padding="5dp"
            android:src="@drawable/profile1" />


        <TextView
            android:id="@+id/tvHomeUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="roshan_photography___"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/ivHomeProfile"
            app:layout_constraintStart_toEndOf="@+id/ivHomeProfile"
            app:layout_constraintTop_toTopOf="@+id/ivHomeProfile" />

        <ToggleButton
            android:id="@+id/ibHomeLike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/heart_svgrepo_com2"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:tint="@color/white" />



    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tvHomeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roshan Girish | Photography Photographer Based in India ðŸ‡®ðŸ‡³"
        app:layout_constraintTop_toBottomOf="@+id/ivSearchProfileimage" />


</androidx.appcompat.widget.LinearLayoutCompat>