<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="20dp">

    <ImageView
        android:id="@+id/iv_profileAssetItem"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kawasaki_ninja_h2_10" />

    <TextView
        android:id="@+id/tv_profileAssetNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="NINJA H2R"
        android:textColor="@color/black"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_profileAssetItem"
        app:layout_constraintTop_toTopOf="@+id/iv_profileAssetItem" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_profileAssetNameItem"
        app:layout_constraintTop_toBottomOf="@+id/tv_profileAssetNameItem"
        tools:text="Having a single-sided swingarm allows the exhaust silencer to be mounted closer to the bike centreline, ensuring a high bank angle for sporty cornering." />
</androidx.constraintlayout.widget.ConstraintLayout>